+	/// }
+	/// </code>
+	/// </example>
+	/// <example>
+	/// Good example:
+	/// <code>
+	/// try {
+	///	if (Initialize () != 0)
+	///		throw new NotSupportedException ();
+	/// }
+	/// finally {
+	///	Cleanup ();
+	/// }
