+		{
+			OpCodeBitmask mask = new OpCodeBitmask ();
+			mask.Set (Code.Stfld);
+			mask.Set (Code.Stelem_Ref);
+			Console.WriteLine (mask);
+		}
+#endif
+	}
+}
